# frozen_string_literal: true

source 'https://rubygems.org'

# For parsing frontmatter from Markdown content
gem 'front_matter_parser', '~> 1.0', '>= 1.0.1'

# For rendering markdown to html
gem 'kramdown'

# For coloring code blocks in Markdown renders
gem 'rouge'

# For embedding articles into a layout
gem 'tilt'

# For faster ERB style templates in Tilt
gem 'erubi'

# For generating RSS and/or Atom feeds
gem 'rss'

# For simple previewing of static site locally
gem 'webrick'

group 'development' do
  gem 'ruby-lsp'
  gem 'solargraph'
end

<h1 class="section-title">Recent Posts</h1>

<div class="posts-list">
    <% posts.each do |post| %>
    <article class="post-preview">
        <h2 class="post-preview-title">
            <a href="<%= post[:url] %>"><%= post[:title] %></a>
        </h2>
        <p class="post-preview-meta"><%= post[:date] %></p>
        <div class="post-preview-excerpt">
            <%= post[:excerpt] %>
        </div>
        <a class="post-preview-more" href="<%= post[:url] %>">Read more &rarr;</a>
    </article>
    <% end %>
</div>

<nav class="all-posts-link">
    <a href="/posts/">All posts &rarr;</a>
</nav>

<h1 class="section-title">All Posts</h1>

<div class="posts-list">
    <% posts.each do |post| %>
    <article class="post-preview">
        <h2 class="post-preview-title">
            <a href="<%= post[:url] %>"><%= post[:title] %></a>
        </h2>
        <p class="post-preview-meta"><%= post[:date] %><% if post[:tags] && !post[:tags].empty? %> | <%= post[:tags].join(', ') %><% end %></p>
        <div class="post-preview-excerpt">
            <%= post[:excerpt] %>
        </div>
        <a class="post-preview-more" href="<%= post[:url] %>">Read more &rarr;</a>
    </article>
    <% end %>
</div>
